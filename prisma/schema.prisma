  metadata      Json? // Donn√©es additionnelles (r√©f√©rences, d√©tails)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([walletId])
  @@index([sessionId])
  @@index([bonusTaskId])
  @@index([withdrawalId])
  @@index([type])
  @@index([status])
  @@index([createdAt])
  @@map("transactions")
}

